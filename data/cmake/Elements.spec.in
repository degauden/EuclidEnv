# -*- rpm-spec -*-
Summary:        Euclid @CPACK_PACKAGE_NAME@ Project
Name:           @CPACK_PACKAGE_NAME@
Version:        @CPACK_PACKAGE_VERSION@
Release:        @CPACK_PACKAGE_RELEASE@%{?dist}
License:        Public Domain
Group:          Development/Tools
Source:         @CPACK_PACKAGE_NAME@-@CPACK_PACKAGE_VERSION@.tar.gz
Vendor:         @CPACK_PACKAGE_VENDOR@


BuildRequires: gcc > 4.7, cmake >= 2.6@RPM_DEVEL_DEP_LIST@

Requires: python@RPM_DEP_LIST@
Requires(post):    /sbin/ldconfig
Requires(postun):  /sbin/ldconfig

%define bin_tag @CPACK_SYSTEM_NAME@
%define _proj_base_dir @EUCLID_BASE_DIR@
%define _proj_name_dir %{_proj_base_dir}/%{name}
%define _proj_vers_dir %{_proj_name_dir}/%{version}
%define _proj_ia_dir %{_proj_vers_dir}/InstallArea
%define _prefix %{_proj_ia_dir}/%{bin_tag}
%define build_dir_name @BUILD_SUBDIR@
%define libdir %{_prefix}/lib
%define pydir %{_prefix}/python
%define scriptsdir %{_prefix}/scripts
%define cmakedir %{_prefix}/cmake
%define confdir %{_prefix}/@CONF_DIR_NAME@
%define auxdir %{_prefix}/@AUX_DIR_NAME@

%define debug_package %{nil}

%description
@CPACK_RPM_PACKAGE_DESCRIPTION@

%package devel
Group:  Development/Libraries
Summary: The development part of the %{name} package
Requires: cmake >= 2.6, %{name} = %{version}-%{release}@RPM_DEVEL_DEP_LIST@

%description devel
The development part of the %{name} package.

%package debuginfo
Summary: Debug information for package %{name}
Requires: %{name} = %{version}-%{release}@RPM_DEBUGINFO_DEP_LIST@

%description debuginfo
Debug information for package %{name}

%prep
%setup -q

%build
export BINARY_TAG=%{bin_tag}
export VERBOSE=1
if [[ -z "$EUCLID_BASE" ]]; then
  export CMAKE_PROJECT_PATH=/opt/euclid
else
  export CMAKE_PROJECT_PATH=$EUCLID_BASE
fi
export CMAKE_PREFIX_PATH=$PWD/cmake:/usr/share/EuclidEnv/cmake
toolchain_name=ElementsToolChain.cmake
if [[ -f "${PWD}/cmake/${toolchain_name}" ]]; then
  toolchain_file=${PWD}/cmake/${toolchain_name}
else
  if [[ -f "/usr/share/EuclidEnv/cmake/${toolchain_name}" ]]; then
    toolchain_file=/usr/share/EuclidEnv/cmake/${toolchain_name}
  fi
fi
%__mkdir -p $RPM_BUILD_DIR/$BINARY_TAG
cd $RPM_BUILD_DIR/$BINARY_TAG
if [[ -z "${toolchain_file}" ]]; then
  %cmake @CPACK_EXTRA_CMAKEFLAGS@ $RPM_BUILD_DIR/%{name}-%{version}
else
  %cmake @CPACK_EXTRA_CMAKEFLAGS@ -DCMAKE_TOOLCHAIN_FILE=${toolchain_file} $RPM_BUILD_DIR/%{name}-%{version}
fi
%__make VERBOSE=1 %{?_smp_mflags} all

%install
export BINARY_TAG=%{bin_tag}
export VERBOSE=1
if [[ -z "$EUCLID_BASE" ]]; then
  export CMAKE_PROJECT_PATH=/opt/euclid
else
  export CMAKE_PROJECT_PATH=$EUCLID_BASE
fi
export CMAKE_PREFIX_PATH=$PWD/cmake:/usr/share/EuclidEnv/cmake
cd $RPM_BUILD_DIR/$BINARY_TAG
%__make install VERBOSE=1 DESTDIR=$RPM_BUILD_ROOT

%clean
rm -rf $RPM_BUILD_ROOT


%postun
/sbin/ldconfig
for d in  %{_proj_ia_dir}  %{_proj_vers_dir} %{_proj_name_dir}; do
  if [[ -d "${d}" ]]; then
    if [[ ! "$(ls -A ${d})" ]]; then
      echo "Removing the ${d} empty directory ..."
      rmdir ${d}
    fi
  fi
done

@CPACK_RPM_REGULAR_FILES@

@CPACK_RPM_DEVEL_FILES@

@CPACK_RPM_DEBINFO_FILES@

@CPACK_RPM_CHANGELOG@
